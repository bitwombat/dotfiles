conky.text = [[
${color grey}Load:${color white} ${loadavg 1} ${color grey}/ CPU:${color white} ${cpu}% ${color grey}/ Processes:${color white} $processes ${color grey}/ Run:${color white} $running_processes
${color white}${cpubar 7,300}
${color grey}RAM: ${color white}$memperc% ${color #cccccc}
${color white}${membar 7,300}
${color DarkSlateGray}$hr
${color grey}Frequency:$alignr ${color white}$freq MHz
${color grey}Slash $alignr ${color white}${fs_free /} free ${fs_bar 6,75 /}
${color DarkSlateGray}$hr
#${alignc}Internet IP:${color white}${exec cat /tmp/myip}
${alignc}${color gray}Local IP:${color white}${addr wlo1}
${color grey}Down:${color white}${downspeed wlo1}${color grey}${alignr}Up:${color white}${upspeed wlo1}${color grey}
${downspeedgraph wlo1 25,145 800} ${alignr}${upspeedgraph wlo1 25,145 38} ${alignr}
${color DarkSlateGray}$hr${font DejaVu Sans Mono :size=9}
${color orange}PID   USER     %CPU COMMAND
${color grey}${exec /home/gbell2/bin/top_cpu.conky}
${color DarkSlateGray}$hr
${color orange}PID   USER      MEM COMMAND
${color grey}${exec /home/gbell2/bin/top_mem.conky}
]];
